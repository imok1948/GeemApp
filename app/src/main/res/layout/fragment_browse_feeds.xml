<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = '@+id/feeds_drawer'
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".fragments.browse.feeds.FragmentBrowseFeeds"
    tools:openDrawer="end">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <LinearLayout
                android:id="@+id/lyt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="70dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/search_text"
                    android:layout_width="179dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/search_bar_border"
                    android:ems="10"
                    android:hint="Search items.."
                    android:inputType="textPersonName"
                    android:paddingLeft="12dp"
                    android:text="" />

                <ImageView
                    android:id="@+id/filter_feeds"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_filter_list_24" />


            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/relativeLayout"
        android:gravity="center"
        app:layout_anchorGravity="center">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/feeds_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="656dp"

            android:layout_marginTop="75dp"
            android:scrollbars="none"
            android:scrollingCache="true" />

        <!--  <LinearLayout
            android:id="@+id/lyt_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/spacing_medium"
            android:orientation="vertical">

            <com.example.geem.temp.ui.widgets.ViewLoadingDotsBounce
              android:layout_width="50dp"
              android:layout_height="40dp"
              android:background="@color/pink_300" />
          </LinearLayout>
      -->

    </RelativeLayout>
    <include layout="@layout/menu_drawer_filter"/>

</androidx.drawerlayout.widget.DrawerLayout>




